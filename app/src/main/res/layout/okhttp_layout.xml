<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sunland.example.wangchao.testproject.activity.MainActivity">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/testview" android:text="wa">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/http_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get"
                />

            <Button
                android:id="@+id/http_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                />

            <Button
                android:id="@+id/my_okhttp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用自己的搭建的网络框架"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>